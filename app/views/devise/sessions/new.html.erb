<section id="contact" class="section">
  <div class="contact-form">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-md-9">
          <div class="contact-block">
            <div class="section-header">
              <h2 class="section-title">SIGN <span>IN</span></h2>
              <hr class="lines">
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, placeholder: 'Your Email', id: 'email', class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", placeholder: 'Your Password', class: 'form-control' %>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="submit-button text-center">
                    <%= f.submit "SIGN IN", class: "btn btn-common" %>
                  </div>
                </div>
              </div>
            <% end -%>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
